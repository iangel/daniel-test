    <rules>
        <fullName>Account Search with Operating Station</fullName>
        <actions>
            <name>NS_UpdateOpStation</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>It populates Op station to make it a searchable field</description>
        <formula>NOT(ISBLANK(NS_OperatingStation__c))</formula>
